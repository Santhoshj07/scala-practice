object q7 {
  def get(str: String, n: Int): String = 
    {
     str.take(n) + str.drop(n + 1)
    }    
   def main(args: Array[String]): Unit = {
      println("output: " + get("affine", 1));
      println("output: " + get("affine", 0));
      println("output: " + get("affine", 4));
      println("output: " + get("affine", 5));
    }
}
